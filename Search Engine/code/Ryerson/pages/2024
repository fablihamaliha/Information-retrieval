                <div class="panel-heading container-clipboard">
                    <h2 class="panel-title">
                        <a id="accordion-1592249505453-creating-the-hiring-committee" role="tab" data-toggle="collapse" data-parent="#" href="#accordion-content-1592249505453-creating-the-hiring-committee" aria-controls="accordion-content-1592249505453-creating-the-hiring-committee" aria-expanded="false">
                            Creating the hiring committee
                        </a>
                    </h2>
                    
                </div>
                <!-- Accordion Body -->
                <div tabindex="0" id="accordion-content-1592249505453-creating-the-hiring-committee" class="panel-collapse collapse" role="tabpanel" aria-labelledby="accordion-1592249505453-creating-the-hiring-committee">
