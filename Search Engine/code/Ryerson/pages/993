jQuery(document).ready(function() {
    jQuery("#component169803496 .accordion").accordion({
        header: "div.header",
        autoHeight: false,
        collapsible:true,
        active:false
       
    });

    jQuery("#component169803496 .openAll").click(function(event){
        event.preventDefault();
    	jQuery("#component169803496 .accordion").each(function (idx, item) {
    	    if (jQuery(item).accordion("option", "active") === false) {
    	    	jQuery(item).accordion('activate', 0);
    	    }
    	});
    });
    jQuery("#component169803496 .closeAll").click(function(event){
    	event.preventDefault();
        jQuery("#component169803496 .accordion").each(function (idx, item) {
            	jQuery(item).accordion("option", "active",false);
        });
    });
    
});
