    <div class="col-xs-12">
        <div class="panel-group accordion background-hidden" id="869b1400-4a00-4d62-bf4d-44d802158c94" role="tablist" aria-multiselectable="true">
			
				<div class="resAccordionControl" role="group" aria-label="Accordion Actions">
