                        if(latLng != null){
                            drawDynamicMapByLatLng('81af44f1-1865-462b-8747-d43af1daca68',latLng,'600px',18,true);
                        } else{
                            drawDynamicMapByAddress('81af44f1-1865-462b-8747-d43af1daca68','1 Dundas Street West, Toronto, ON, M5G 2L5, Canada','600px',18,true);
                        }
                    } else {
                        if(latLng != null){
