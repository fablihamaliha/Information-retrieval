        collapsible:true,
        active:false
       
    });

    jQuery("#component597784863 .openAll").click(function(event){
        event.preventDefault();
    	jQuery("#component597784863 .accordion").each(function (idx, item) {
    	    if (jQuery(item).accordion("option", "active") === false) {
    	    	jQuery(item).accordion('activate', 0);
    	    }
    	});
    });
    jQuery("#component597784863 .closeAll").click(function(event){
    	event.preventDefault();
        jQuery("#component597784863 .accordion").each(function (idx, item) {
            	jQuery(item).accordion("option", "active",false);
        });
    });
    
});
