        var imgWidth = jQuery("#component329584440 .image img").outerWidth(true);
        if(parseInt(imgWidth) < 130){
        	imgWidth = parseInt(imgWidth) + 130;
        }
        jQuery("#component329584440 .image").width(imgWidth);  
        
    }).each(function() {
		if (this.complete) jQuery(this).load();
	}); 
    </script>
    












