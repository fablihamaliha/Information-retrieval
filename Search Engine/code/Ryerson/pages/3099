<script type="text/javascript">
jQuery(document).ready(function() {
    jQuery("#component1912742849 .accordion").accordion({
        header: "div.header",
        autoHeight: false,
        collapsible:true,
        active:false
       
    });

    jQuery("#component1912742849 .openAll").click(function(event){
        event.preventDefault();
    	jQuery("#component1912742849 .accordion").each(function (idx, item) {
    	    if (jQuery(item).accordion("option", "active") === false) {
    	    	jQuery(item).accordion('activate', 0);
    	    }
    	});
    });
    jQuery("#component1912742849 .closeAll").click(function(event){
    	event.preventDefault();
        jQuery("#component1912742849 .accordion").each(function (idx, item) {
            	jQuery(item).accordion("option", "active",false);
        });
    });
    
});
 </script>
 
