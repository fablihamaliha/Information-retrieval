            } else {
                $('#73437596-b54b-4192-bb95-0ceddf27962a').carousel('pause');
                $(this).attr("id", "73437596-b54b-4192-bb95-0ceddf27962a-play");
                $("#73437596-b54b-4192-bb95-0ceddf27962a-play i").attr("class", "fa fa-play");
            }
        });
        
        		$('#73437596-b54b-4192-bb95-0ceddf27962a').carousel('cycle');
        	
    });
</script>
