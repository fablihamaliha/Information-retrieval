	if (!$(this).hasClass('form-control')) {
		if ($(this).is("input[type='file']")) {
			$(this).attr('id', 'rye-d3a22097-2342-428f-868e-ec11def7162b_upload'+i).wrap("<span class='htmlSnippetForm'></span>").after("<label for='rye-d3a22097-2342-428f-868e-ec11def7162b_upload"+i+"' class='customInput'>Choose file</label>");
		} else {
			$(this).wrap("<span class='htmlSnippetForm'></span>").after("<span class='customInput'></span>");
		}
	}
});
</script>

	<style>
		#rye-d3a22097-2342-428f-868e-ec11def7162b iframe{ height:;}
		@media screen and (min-width: 768px) { #rye-d3a22097-2342-428f-868e-ec11def7162b iframe{ height:;} }
