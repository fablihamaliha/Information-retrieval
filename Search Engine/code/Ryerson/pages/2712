<script type="text/javascript">
jQuery(document).ready(function() {
    jQuery("#component1211770785 .accordion").accordion({
        header: "div.header",
        autoHeight: false,
        collapsible:true,
        active:false
       
    });

    jQuery("#component1211770785 .openAll").click(function(event){
        event.preventDefault();
    	jQuery("#component1211770785 .accordion").each(function (idx, item) {
    	    if (jQuery(item).accordion("option", "active") === false) {
