				<div class="resAccordion section">
























 


<div class="row">
    <div class="col-xs-12">
        <div class="panel-group accordion background-hidden" id="901acf56-e3f8-4d2e-8d7a-5041fb56bca1" role="tablist" aria-multiselectable="true">
			
            
            <div class="panel panel-default">
                <!-- Accordion Heading -->
                <div class="panel-heading container-clipboard">
                    <h3 class="panel-title">
