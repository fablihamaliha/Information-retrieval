jQuery(document).ready(function() {
    jQuery("#component350623674 .accordion").accordion({
        header: "div.header",
        autoHeight: false,
        collapsible:true,
        active:false
       
    });

    jQuery("#component350623674 .openAll").click(function(event){
        event.preventDefault();
    	jQuery("#component350623674 .accordion").each(function (idx, item) {
    	    if (jQuery(item).accordion("option", "active") === false) {
    	    	jQuery(item).accordion('activate', 0);
    	    }
    	});
    });
    jQuery("#component350623674 .closeAll").click(function(event){
    	event.preventDefault();
        jQuery("#component350623674 .accordion").each(function (idx, item) {
            	jQuery(item).accordion("option", "active",false);
        });
    });
    
});
