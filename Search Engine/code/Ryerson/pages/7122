                    var isInResLocalFooter = false;
                    var latLng = JSON.parse('{"lat": 43.65829859999999, "lng": -79.3807846}');
                    if(!isInResLocalFooter) {
                        if(latLng != null){
                            drawDynamicMapByLatLng('fc04c5a0-f28b-46f2-b5fd-0b6d415957ba',latLng,'300px',18,false);
                        } else{
                            drawDynamicMapByAddress('fc04c5a0-f28b-46f2-b5fd-0b6d415957ba','350 Victoria Street, Toronto, ON, M5B 2K3, Canada','300px',18,false);
