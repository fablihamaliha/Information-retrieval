            if ($(this).attr("id") == "174a93b3-4e13-495d-88be-ce0e2a10463a-play") {
                $('#174a93b3-4e13-495d-88be-ce0e2a10463a').carousel('cycle');
                $(this).attr("id", "174a93b3-4e13-495d-88be-ce0e2a10463a-pause");
                $("#174a93b3-4e13-495d-88be-ce0e2a10463a-pause i").attr("class", "fa fa-pause");
            } else {
                $('#174a93b3-4e13-495d-88be-ce0e2a10463a').carousel('pause');
                $(this).attr("id", "174a93b3-4e13-495d-88be-ce0e2a10463a-play");
                $("#174a93b3-4e13-495d-88be-ce0e2a10463a-play i").attr("class", "fa fa-play");
            }
        });
        
        		$('#174a93b3-4e13-495d-88be-ce0e2a10463a').carousel('cycle');
        	
    });
</script>
