<script type="text/javascript">
var center_page = function () {
    var vw = Math.max(document.documentElement.clientWidth, window.innerWidth || 0);
    var vh = Math.max(document.documentElement.clientHeight, window.innerHeight || 0);

    if (vw > 768) {
        var search_box = $('.typeahead');
        search_box.focus(function () {$('.typeahead').css('border-color', '#0078E7')});
        search_box.focusout(function () {$('.typeahead').css('border-color', 'rgba(0,0,0,0.3)')});
  
        var search_box_h = $('.typeahead').outerHeight();
        $('#logoNsearch form button').outerHeight(search_box_h - 4 + "px");
        $('.typeahead').css('padding-right', $('#logoNsearch form button').outerWidth() + 20 + "px");

        var maxHeight = 0;
        var getMaxHeight = function (index, element) {
            maxHeight = ($(element).height() > maxHeight) ? $(element).height() : maxHeight;
        };
        var setHeight = function (index, element) {
            $(element).height(maxHeight + "px");
        };

        var cards = $('.smallCard, .largeCard');
        cards.each(getMaxHeight);
        cards.each(setHeight);

        var content_height = $('#centralizer').height();
        if (content_height < vh - $('footer').outerHeight() - 60) {
            var gap = (vh - $('footer').outerHeight() - content_height) / 2;
            $('#centralizer').css('padding', Math.floor(gap) + 'px 0');
        }
    }     
};

var removeStyleTags = function () {
    var elements = $('#centralizer, #logoNsearch form button, .typeahead, .smallCard, .largeCard');
    elements.each(function (index, element) {$(element).removeAttr('style')});
};

$(window).load(function () {
    $('#facultymaxview').addClass('hidify');
    $('#mrmaxview').addClass('hidify');
    $('#departmentmaxview').addClass('hidify');
    $('#facultyexpander').click(
        function () {
            $('#facultyminview').addClass('hidify');
            $('#facultymaxview').removeClass('hidify');
        }
    );
    $('#mrexpander').click(
        function () {
            $('#mrminview').addClass('hidify');
            $('#mrmaxview').removeClass('hidify');
        }
    );
    $('#departmentexpander').click(
        function () {
            $('#departmentminview').addClass('hidify');
            $('#departmentmaxview').removeClass('hidify');
        }
    );
    $('#facultyshrinker').click(
        function () {
            $('#facultymaxview').addClass('hidify');
            $('#facultyminview').removeClass('hidify');
        }
    );
    $('#mrshrinker').click(
        function () {
            $('#mrmaxview').addClass('hidify');
            $('#mrminview').removeClass('hidify');
        }
    );
    $('#departmentshrinker').click(
        function () {
            $('#departmentmaxview').addClass('hidify');
            $('#departmentminview').removeClass('hidify');
        }
    );
    center_page();
});
$(window).resize(function () {removeStyleTags(); _.debounce(center_page, 100)();});
</script>

