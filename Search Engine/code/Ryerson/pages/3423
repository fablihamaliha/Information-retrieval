        }).superfish({
            "speed":200,
            "dropShadows":false, 
            "autoArrows":true,
            pathClass:'currentPathNav'
        });
    
    
                jQuery('.sf-menu > .menuItem').each(function(index) {
                    calcWidth += parseInt(jQuery(this).width(), 10)+6;
                }); 
            jQuery('.sf-menu').css("width",calcWidth);
            
}); 
