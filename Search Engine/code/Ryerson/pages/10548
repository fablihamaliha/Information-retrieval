                   $("#4a757148-051d-49d6-9bce-f24f6b0cbfa6-pause i").attr("class", "fa fa-pause");
               } else {
                   $('#4a757148-051d-49d6-9bce-f24f6b0cbfa6').carousel('pause');
                   $(this).attr("id", "4a757148-051d-49d6-9bce-f24f6b0cbfa6-play");
                   $("#4a757148-051d-49d6-9bce-f24f6b0cbfa6-play i").attr("class", "fa fa-play");
               }
           });
           
               $('#4a757148-051d-49d6-9bce-f24f6b0cbfa6').carousel('pause');
               
       });
    </script>
</body>
</html>
