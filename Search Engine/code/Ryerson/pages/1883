        header: "div.header",
        autoHeight: false,
        collapsible:true,
        active:false
       
    });

    jQuery("#component1171053619 .openAll").click(function(event){
        event.preventDefault();
    	jQuery("#component1171053619 .accordion").each(function (idx, item) {
    	    if (jQuery(item).accordion("option", "active") === false) {
    	    	jQuery(item).accordion('activate', 0);
    	    }
    	});
    });
    jQuery("#component1171053619 .closeAll").click(function(event){
    	event.preventDefault();
        jQuery("#component1171053619 .accordion").each(function (idx, item) {
            	jQuery(item).accordion("option", "active",false);
        });
    });
    
});
