                <div class="panel-heading container-clipboard">
                    <h3 class="panel-title">
                        <a id="accordion-1585080057406-create-a-routine" role="tab" data-toggle="collapse" data-parent="#" href="#accordion-content-1585080057406-create-a-routine" aria-controls="accordion-content-1585080057406-create-a-routine" aria-expanded="false">
                            Create a routine
                        </a>
                    </h3>
                    
                </div>
                <!-- Accordion Body -->
                <div tabindex="0" id="accordion-content-1585080057406-create-a-routine" class="panel-collapse collapse" role="tabpanel" aria-labelledby="accordion-1585080057406-create-a-routine">
